{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "MPI Debug - 2 processes",
      "type": "cppdbg",
      "request": "launch",
      "program": "C:/MPI/Bin/mpiexec.exe", 
      "args": [
        "-n", "2", "${workspaceFolder}/fproj.exe"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
